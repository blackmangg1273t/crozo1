        BackgroundTransparency = 1
    })
    
    -- Ø­Ø§ÙˆÙŠØ© Ø§Ù„ØªØ¨ÙˆÙŠØ¨Ø§Øª
    local tabsContainer = Utils.Create("Frame", {
