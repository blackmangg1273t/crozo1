    end)
    
    -- Ø¥ØºÙ„Ø§Ù‚ Ø§Ù„Ù†Ø§ÙØ°Ø©
    closeBtn.MouseButton1Click:Connect(function()
        Animations.Shake(closeBtn)
        Animations.FadeOut(window)
        wait(0.3)
        screenGui:Destroy()
    end)
    
    -- ØªÙƒÙŠÙ Ù…Ø¹ Ø§Ù„Ø¬ÙˆØ§Ù„
    if RunService:IsMobile() then
        local uiScale = Utils.Create("UIScale", {Scale = 0.85})
        uiScale.Parent = window
    end
    
    -- Ø¥Ø®ÙØ§Ø¡/Ø¥Ø¸Ù‡Ø§Ø± Ø¨Ø§Ø®ØªØµØ§Ø± Ù„ÙˆØ­Ø© Ø§Ù„Ù…ÙØ§ØªÙŠØ­
    local isVisible = true
    UserInputService.InputBegan:Connect(function(input, gameProcessed)
        if not gameProcessed and input.KeyCode == Enum.KeyCode.RightShift then
            isVisible = not isVisible
            screenGui.Enabled = isVisible
            if isVisible then
                Animations.FadeIn(window)
            else
                Animations.FadeOut(window)
            end
        end
    end)
    
    -- ============================================
    -- ÙƒØ§Ø¦Ù† Ø§Ù„Ù†Ø§ÙØ°Ø© Ù…Ø¹ Ø§Ù„ÙˆØ¸Ø§Ø¦Ù
