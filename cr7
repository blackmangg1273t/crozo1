-- Ø§Ù„Ø«ÙŠÙ… Ø§Ù„Ø­Ø§Ù„ÙŠ
local CurrentTheme = Themes.Dark

-- ============================================
-- Ø§Ù„Ø£Ø¯ÙˆØ§Øª Ø§Ù„Ù…Ø³Ø§Ø¹Ø¯Ø© Ø§Ù„Ù…Ø­Ø³Ù†Ø©
-- ============================================
local Utils = {}

-- Ø¥Ù†Ø´Ø§Ø¡ Ø¹Ù†ØµØ± Ø¬Ø¯ÙŠØ¯
function Utils.Create(class, properties)
    local obj = Instance.new(class)
    for prop, value in pairs(properties) do
        obj[prop] = value
    end
    return obj
end

-- Ø¥Ù†Ø´Ø§Ø¡ ØªØ£Ø«ÙŠØ± Ø­Ø±ÙƒØ© Ù…ØªÙ‚Ø¯Ù…
function Utils.Tween(object, properties, duration, easingStyle, easingDirection)
    local tweenInfo = TweenInfo.new(
        duration or 0.3,
        easingStyle or Enum.EasingStyle.Quad,
        easingDirection or Enum.EasingDirection.Out,
        0,
        false,
        0
    )
    local tween = TweenService:Create(object, tweenInfo, properties)
    tween:Play()
    return tween
end

-- Ø¥Ù†Ø´Ø§Ø¡ Ø¥Ø·Ø§Ø± Ø¨Ø²ÙˆØ§ÙŠØ§ Ù…Ø¯ÙˆØ±Ø©
function Utils.CreateRoundedFrame(properties, theme)
    local frame = Utils.Create("Frame", properties)
    local corner = Utils.Create("UICorner", {
        CornerRadius = UDim.new(0, properties.CornerRadius or theme.CornerRadius.Medium)
    })
    corner.Parent = frame
    return frame
end

-- Ø¥Ù†Ø´Ø§Ø¡ ØªØ£Ø«ÙŠØ± Glassmorphism Ù…ØªÙ‚Ø¯Ù…
function Utils.CreateGlassEffect(parent, theme)
    local frame = Utils.Create("Frame", {
        Name = "GlassEffect",
        BackgroundTransparency = theme.Transparencies.Glass,
        BackgroundColor3 = theme.Colors.Glass,
        Size = UDim2.new(1, 0, 1, 0),
        ZIndex = 0
    })
    
    local uicorner = Utils.Create("UICorner", {
        CornerRadius = UDim.new(0, theme.CornerRadius.Large)
    })
    uicorner.Parent = frame
    
    local uistroke = Utils.Create("UIStroke", {
        Color = theme.Colors.Glass,
        Transparency = 0.9,
        Thickness = 1.5,
        ApplyStrokeMode = Enum.ApplyStrokeMode.Border
    })
    uistroke.Parent = frame
    
    frame.Parent = parent
    return frame
end

-- ØªØ£Ø«ÙŠØ± Hover Ù…ØªÙ‚Ø¯Ù…
function Utils.AddHoverEffect(button, theme)
    local originalTransparency = button.BackgroundTransparency
    local originalSize = button.Size
    
    button.MouseEnter:Connect(function()
        Utils.Tween(button, {
            BackgroundTransparency = originalTransparency - 0.2,
            Size = originalSize + UDim2.new(0, 4, 0, 4)
        }, 0.15)
    end)
    
    button.MouseLeave:Connect(function()
        Utils.Tween(button, {
            BackgroundTransparency = originalTransparency,
            Size = originalSize
        }, 0.15)
    end)
end

-- Ø¥Ù†Ø´Ø§Ø¡ Ø¥Ø·Ø§Ø± Ø¨Ø­Ø¯ÙˆØ¯ Ù…ØªÙ‚Ø¯Ù…Ø©
function Utils.CreateBorderedFrame(properties, theme, borderStyle)
    local frame = Utils.Create("Frame", properties)
    
    local corner = Utils.Create("UICorner", {
        CornerRadius = UDim.new(0, properties.CornerRadius or theme.CornerRadius.Medium)
    })
    corner.Parent = frame
    
    local stroke = Utils.Create("UIStroke", {
        Color = theme.Colors.Border,
        Transparency = 0.3,
        Thickness = borderStyle or theme.BorderStyles.Medium,
        ApplyStrokeMode = Enum.ApplyStrokeMode.Border
    })
    
    if borderStyle == theme.BorderStyles.Gradient then
        local gradient = Utils.Create("UIGradient", {
            Rotation = 45,
            Color = ColorSequence.new({
                ColorSequenceKeypoint.new(0, theme.Colors.Accent),
                ColorSequenceKeypoint.new(0.5, theme.Colors.Success),
                ColorSequenceKeypoint.new(1, theme.Colors.Accent)
            })
        })
        gradient.Parent = stroke
    end
    
    stroke.Parent = frame
    return frame
end

-- Ø­ÙØ¸ Ø§Ù„Ø¥Ø¹Ø¯Ø§Ø¯Ø§Øª
function Utils.SaveConfig(name, data)
    local success, result = pcall(function()
        local json = HttpService:JSONEncode(data)
        if isfolder and makefolder and writefile then
            if not isfolder(CONFIG_FOLDER) then
                makefolder(CONFIG_FOLDER)
            end
            writefile(CONFIG_FOLDER .. "/" .. name .. ".json", json)
        else
            local DataStoreService = game:GetService("DataStoreService")
            local store = DataStoreService:GetDataStore(CONFIG_FOLDER)
            store:SetAsync(name, data)
        end
    end)
    return success
end

-- ØªØ­Ù…ÙŠÙ„ Ø§Ù„Ø¥Ø¹Ø¯Ø§Ø¯Ø§Øª
function Utils.LoadConfig(name)
    local success, result = pcall(function()
        if isfolder and readfile then
            if isfolder(CONFIG_FOLDER) then
                local path = CONFIG_FOLDER .. "/" .. name .. ".json"
                if readfile and isfile and isfile(path) then
                    local json = readfile(path)
                    return HttpService:JSONDecode(json)
                end
            end
        else
            local DataStoreService = game:GetService("DataStoreService")
            local store = DataStoreService:GetDataStore(CONFIG_FOLDER)
            return store:GetAsync(name)
        end
    end)
    return success and result or {}
end

-- Ø¥Ù†Ø´Ø§Ø¡ Ø£ÙŠÙ‚ÙˆÙ†Ø©
function Utils.CreateIcon(iconId, size, color, parent)
    local icon = Utils.Create("ImageLabel", {
        Image = iconId,
        ImageColor3 = color or CurrentTheme.Colors.Text,
        BackgroundTransparency = 1,
        Size = size or UDim2.new(0, 24, 0, 24),
        ImageTransparency = 0
    })
    
    if parent then
        icon.Parent = parent
    end
    
    return icon
end

-- ============================================
-- Ù†Ø¸Ø§Ù… Ø§Ù„Ø­Ø±ÙƒØ§Øª Ø§Ù„Ù…Ø­Ø³Ù†
-- ============================================
local Animations = {
    Pulse = function(object)
        local originalSize = object.Size
        local tween = Utils.Tween(object, {Size = originalSize + UDim2.new(0, 6, 0, 6)}, 0.2)
        tween.Completed:Connect(function()
            Utils.Tween(object, {Size = originalSize}, 0.2)
        end)
    end,
    
    Shake = function(object)
        local originalPosition = object.Position
        for i = 1, 4 do
            Utils.Tween(object, {Position = originalPosition + UDim2.new(0, 4, 0, 0)}, 0.05)
            wait(0.05)
            Utils.Tween(object, {Position = originalPosition - UDim2.new(0, 4, 0, 0)}, 0.05)
            wait(0.05)
        end
        Utils.Tween(object, {Position = originalPosition}, 0.1)
    end,
    
    Bounce = function(object)
        local originalPosition = object.Position
        Utils.Tween(object, {Position = originalPosition - UDim2.new(0, 0, 0, 10)}, 0.1)
        wait(0.1)
        Utils.Tween(object, {Position = originalPosition}, 0.1)
    end,
    
    FadeIn = function(object)
        object.Visible = true
        Utils.Tween(object, {BackgroundTransparency = 0.1})
    end,
    
    FadeOut = function(object)
        local tween = Utils.Tween(object, {BackgroundTransparency = 1})
        tween.Completed:Connect(function()
            object.Visible = false
        end)
    end
}

-- ============================================
